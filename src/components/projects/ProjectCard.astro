---
import type { Project } from "@/types/project";
import { Img } from "astro-imagetools/components";

type Props = {
  proj: Project;
};

const { proj } = Astro.props;
---

<a
  href={proj.link}
  target="_blank"
  class="max-w-xl rounded-md border border-neutral-800 p-4 transition hover:bg-neutral-800"
>

  <!--LINK PATH: public/images -->
  <Img src={`public/images/${proj.img_link}`} alt={proj.name}/>

  <div class="py-2"></div>

  <div class="text-md text-xl flex items-center gap-1 text-neutral-300">
    {proj.name}
  </div>
  <div class="py-1"></div>

  <div class="text-sm text-neutral-400">{proj.desc}</div>

</a>
