---
import { projectsData } from "@/data/projects";
import ProjectCard from "@/components/home/HomeProjectCard.astro";
---

<div>
    <div class="flex max-w-xl items-center">
        <div class="text-xl text-neutral-900">Notable projects </div>
        <div class="grow"></div>
        <a href="/projects" class="text-neutral-500 hover:bg-neutral-200 transition duration-300 px-1 py-0.5">View all</a>
    </div>
    <div class="py-2"></div>
    <div class="flex flex-col gap-2">
        {
            projectsData.slice(0,3).map((proj, _) => {
                return <ProjectCard proj={proj} />;
            })
        }
    </div>
</div>
