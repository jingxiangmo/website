---
import { projectsData } from "@/data/projects";
import ProjectCard from "@/components/projects/ProjectCard.astro";
---

<div>
    <div class="flex max-w-xl items-center">
        <div class="text-xl text-neutral-200">Notable projects </div>
        <div class="grow"></div>
        <a href="/projects" class="hover:text-neutral-100">View all</a>
    </div>
    <div class="py-2"></div>
    <div class="flex flex-col gap-2">
        {
            projectsData.slice(0,3).map((proj, _) => {
                return <ProjectCard proj={proj} />;
            })
        }
    </div>
</div>
